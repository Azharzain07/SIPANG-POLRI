# SIPANG POLRI - Apache Configuration
# Enable clean URLs (remove .php extension)

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Remove trailing slash
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [L,R=301]

    # Remove .php extension from URL
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

    # Redirect .php URLs to clean URLs
    RewriteCond %{THE_REQUEST} ^GET\ /[^?\s]+\.php
    RewriteRule ^(.*)\.php$ /$1 [L,R=301]
    
    # Redirect /index to /dashboard
    RewriteRule ^index/?$ dashboard [L,R=301]

    # Handle index page - redirect to dashboard.php
    DirectoryIndex dashboard.php

    # Prevent directory listing
    Options -Indexes

    # Custom error pages (optional)
    ErrorDocument 404 /404.php
    ErrorDocument 403 /403.php
    ErrorDocument 500 /500.php
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Prevent access to sensitive files
<FilesMatch "\.(env|ini|log|sh|sql|md|git)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and includes folders
<IfModule mod_rewrite.c>
    RewriteRule ^(config|includes)/ - [F,L]
</IfModule>

# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching for static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# UTF-8 encoding
AddDefaultCharset UTF-8

